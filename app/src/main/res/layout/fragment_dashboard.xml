<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.dashboard.DashboardFragment">

    <TextView
        android:id="@+id/greet_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Headline4"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:padding="@dimen/activity_horizontal_margin"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:text="Hi, user"/>

    <LinearLayout
        android:id="@+id/connected_devices"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/activity_horizontal_margin"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/greet_user"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/my_devices"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="My Devices"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
            android:textSize="18sp"
            android:layout_gravity="start"/>

            <Button
                android:id="@+id/device_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Device 1"
                android:textAlignment="viewStart"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:layout_marginEnd="@dimen/activity_horizontal_margin"
                android:drawableEnd="@drawable/ic_baseline_keyboard_arrow_right_24"
                android:backgroundTint="@color/white"
                android:textColor="@color/black"/>

            <Button
                android:id="@+id/device_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Device 2"
                android:textAlignment="viewStart"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
                android:layout_marginEnd="@dimen/activity_horizontal_margin"
                android:drawableEnd="@drawable/ic_baseline_keyboard_arrow_right_24"
                android:backgroundTint="@color/white"
                android:textColor="@color/black"/>

            <Button
                android:id="@+id/device_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Device 3"
                android:textAlignment="viewStart"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
                android:layout_marginEnd="@dimen/activity_horizontal_margin"
                android:drawableEnd="@drawable/ic_baseline_keyboard_arrow_right_24"
                android:backgroundTint="@color/white"
                android:textColor="@color/black"/>

            <Button
                android:id="@+id/add_device"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add a Device"
                android:textAlignment="viewEnd"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
                android:drawableLeft="@drawable/ic_baseline_add_24"
                android:backgroundTint="@color/white"
                android:textColor="@color/black"/>

    </LinearLayout>

    <Button
        android:id="@+id/my_goals"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/connected_devices"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:layout_marginEnd="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:backgroundTint="@color/white"
        android:textColor="@color/black"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
        android:text="My Goals"
        android:textSize="18sp"
        android:textAlignment="viewStart"
        android:drawableEnd="@drawable/ic_baseline_keyboard_arrow_down_24"/>

    <Button
        android:id="@+id/my_trips"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/my_goals"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:layout_marginEnd="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:backgroundTint="@color/white"
        android:textColor="@color/black"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
        android:text="My Trips"
        android:textSize="18sp"
        android:textAlignment="viewStart"
        android:drawableEnd="@drawable/ic_baseline_keyboard_arrow_down_24"/>

    <Button
        android:id="@+id/my_rewards"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/my_trips"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:layout_marginEnd="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:backgroundTint="@color/white"
        android:textColor="@color/black"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
        android:text="My Rewards"
        android:textSize="18sp"
        android:textAlignment="viewStart"
        android:drawableEnd="@drawable/ic_baseline_keyboard_arrow_down_24"/>

</androidx.constraintlayout.widget.ConstraintLayout>